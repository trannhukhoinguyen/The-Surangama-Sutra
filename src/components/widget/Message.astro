  direction = "left",
  nameProp,
  imageURLProp,
  actionProp,
  children,
} = Astro.props;

const defaultCharacterDetails = {
  MonkToLeft: {
    imageURL: "/characters/young-monk-towards-left.jpg",
    name: "TÄƒng",
